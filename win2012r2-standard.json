{
  "builders": [
    {
      "type": "vmware-iso",
      "vm_name": "{{ user `vm_name` }}",
      "version" : 8,
      "output_directory":"./build/{{ user `vm_name` }}",
      "iso_url": "{{ user `iso_url` }}",
      "iso_checksum_type": "sha1",
      "iso_checksum": "{{ user `iso_checksum` }}",
      "headless": "{{ user `headless` }}",
      "boot_wait": "2m",
      "communicator": "winrm",
      "winrm_username": "vagrant",
      "winrm_password": "vagrant",
      "winrm_timeout": "2h",
      "shutdown_timeout": "1h",
      "shutdown_command": "{{ user `shutdown_command`}}",
      "guest_os_type": "windows8srv-64",
      "disk_size": "{{ user `disk_size` }}",
      "disk_type_id":"0",
      "floppy_files": [
        "floppy/win2012r2-standard/Autounattend.xml",
        "scripts/win-updates.ps1",
        "scripts/init.bat",
        "scripts/winrm.bat"
      ],
      "vmdk_name": "{{ user `vm_name` }}",
      "vmx_data": {
        "mks.enable3d": "true",
        "memsize": "2048",
        "numvcpus": "1",
        "scsi0.virtualDev": "lsisas1068",
        "gui.applyHostDisplayScalingToGuest": "false"
      }
    }
  ],
  "provisioners": [
    {
      "type": "windows-shell",
      "scripts": [
        "scripts/vmtools.bat",
        "scripts/enable-rdp.bat"
      ]
    }
  ],
  "variables": {
    "vm_name": "win2012r2-standard",
    "headless": "false",
    "disk_size": "131072",
    "iso_checksum": "b6f063436056510357cb19cb77db781ed9c11df3",
    "iso_url": "./iso/en_windows_server_2012_r2_x64_dvd_2707946.iso",
    "shutdown_command": "shutdown /s /t 10 /f /d p:4:1 /c \"Packer Shutdown\""
  }
}
